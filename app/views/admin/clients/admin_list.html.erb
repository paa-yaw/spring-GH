<div class="admin-page">
	<div class="container">
		<div class="row">
			<div class="col-sm-9 col-sm-offset-1 form-box">

				<div class="row">
					
					<div class="col-lg-12 col-md-12">  
						<div class="panel panel-default">
							<div class="panel-heading">
								<h2><i class="fa fa-user"></i><strong>Admins</strong></h2>
							</div>
							<div class="panel-body">
								<table class="table bootstrap-datatable countries">
									<thead>
										<tr>
											<th>Name</th>
											<th>Email</th>
											<th>Phone Number</th>
											<th>Location</th>
											<th></th>
										</tr>
									</thead>

									<% @admins.each do |admin| %>
									<tbody>
										<tr>
											<td><%= admin.fullname  %></td>
											<td><%= admin.email %></td>
											<td><%= admin.phone_number %></td>
											<td><%= admin.location %></td>
											<td><%= link_to fa_icon("eye") + "Detail", admin_client_path(admin), class: "btn btn-primary" %></td>
										</tr>
									</tbody>
									<% end %>
								</table>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>